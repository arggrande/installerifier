[user]
	email = lol@no.com
	name = Adam Grande
[core]
	editor = "code --wait"
[push]
	default = current
[pull]
    rebase = true
[init]
    defaultBranch = main
[diff]
    tool = vscode
[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE
[merge]
    tool = vscode
[mergetool "vscode"]
    cmd = code --wait $MERGED
[alias]
	ec = config --global -e
	st = status
	co = checkout
	cob = checkout -b
	rbm = fetch && git rebase origin/main
	cm = !git add . && git commit -m
	fire = "!git branch | grep -v 'main' | grep -v '^\\*' | xargs git branch -D"
	l = log --graph --pretty=format:'%C(yellow)%h%C(reset)%C(auto)%d%C(reset) %s %C(dim white)(%an, %ar)%C(reset)' -10
	ll = log --pretty=format:'%C(yellow)%h%C(reset) %C(blue)%ad%C(reset) %s %C(dim white)(%an)%C(reset)' --date=short -15
	lf = log --oneline --name-only
	undo = reset HEAD~1 --mixed
	wip = !git add -A && git commit -m "WIP"
	ec = config --global -e
	unstage = reset HEAD --

[rerere]
    enabled = true
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold